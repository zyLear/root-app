<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlPanelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="384dp">

            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="applay" />

            <Button
                android:id="@+id/changeBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="change brand" />

            <Button
                android:id="@+id/recoverBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="recover brand" />

            <Button
                android:id="@+id/startPassCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="start Pass Check" />

            <Button
                android:id="@+id/stopPassCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stop Pass Check" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>