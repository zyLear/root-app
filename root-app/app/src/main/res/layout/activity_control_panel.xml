<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControlPanelActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:paddingTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="账号：\nvip到期时间："
            android:textSize="25sp"
            android:layout_marginBottom="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title.Inverse"
            android:textStyle="bold" />


            <Button
                android:id="@+id/apply"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="applay" />

            <Button
                android:id="@+id/changeBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="修改机型" />

            <Button
                android:id="@+id/recoverBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="恢复机型" />

            <Button
                android:id="@+id/startPassCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="开启过检测" />

            <Button
                android:id="@+id/stopPassCheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="关闭过检测" />

        </LinearLayout>


</android.support.constraint.ConstraintLayout>